    <section id="contact" class="py-20 px-[5%] bg-gray-100 background: linear-gradient(to bottom, #f9f9f9, #e5e7eb);
    ">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold  text-center mb-12 bg-gradient-to-r from-indigo-600 to-pink-400 bg-clip-text text-transparent">Let's Connect!</h2>
            <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-lg p-8">
                <% if (success) { %>
                    <div class="text-green-500 text-sm mb-4">Message sent successfully!</div>
                  <% } %>
                  <% if (error) { %>
                    <div class="text-red-500 text-sm mb-4"><%= error %></div>
                  <% } %>
                  
                <form class="space-y-6" action="http://localhost:3000/send-message" method="POST">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text" name="name" id="name" name="name" placeholder="Your Full Name" 
                            class="mt-1 block w-full p-3 rounded-lg bg-gray-100 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm">
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" name="email" id="email" name="email" placeholder="you@example.com" 
                            class="mt-1 block w-full p-3 rounded-lg bg-gray-100 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm">
                    </div>
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                        <textarea id="message" name="message" name="message" rows="4" placeholder="Type your message here..." 
                            class="mt-1 block w-full p-3 rounded-lg bg-gray-100 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm"></textarea>
                    </div>
                    <button type="submit" 
                        class="w-full bg-indigo-600 text-white py-3 px-6 rounded-lg hover:bg-indigo-700 hover:shadow-lg transform transition duration-300">
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </section>
    

